# Description: KDE bindings
# URL: http://kde.org
# Maintainer: Hannes Mayer, kontakt at ecarux dot de
# Depends on: kdelibs

name=kdebindings
version=4.2.98
release=1
source=(http://download.kde.org/unstable/$version/src/$name-$version.tar.bz2)

build () {
	cd $name-$version

	mkdir build
	cd build
 
	cmake 	.. -DCMAKE_INSTALL_PREFIX=/usr \
	    -DKDE4_ENABLE_FINAL=on 
	
	make -j1
	make DESTDIR=$PKG install
}
