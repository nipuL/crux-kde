# Description: KDE pim libs
# URL: http://kde.org
# Maintainer: Hannes Mayer, kontakt at ecarux dot de
# Depends on: kdelibs gpgme openldap cyrus-sasl akonadi libical

name=kdepimlibs
version=4.2.4
release=1
source=(http://download.kde.org/stable/$version/src/$name-$version.tar.bz2)

build () {
	cd $name-$version

	mkdir build
	cd build
 
	cmake 	.. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
	
	make -j3
	make DESTDIR=$PKG install

	chown -R root:root $PKG
}
