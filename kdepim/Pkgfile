# Description: KDE pim
# URL: http://kde.org
# Maintainer: Hannes Mayer, kontakt at ecarux dot de
# Depends on: kdebase akonadi

name=kdepim
version=4.2.98
release=1
source=(http://download.kde.org/unstable/$version/src/$name-$version.tar.bz2 mail-duplication.patch)

build () {
	cd $name-$version

	mkdir build
	cd build
 
	cmake 	.. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
	
	make
	make DESTDIR=$PKG install
}
