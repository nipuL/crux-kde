# Description: KDE pim
# URL: http://kde.org
# Maintainer: Hannes Mayer, kontakt at ecarux dot de
# Depends on: kdebase akonadi

name=kdepim
version=4.2.4
release=1
source=(http://download.kde.org/stable/$version/src/$name-$version.tar.bz2 mail-duplication.patch)

build () {
	cd $name-$version

	mkdir build
	cd build
 
	cmake 	.. -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
	
	nice make -j3
	make DESTDIR=$PKG install

	chown -R root:root $PKG
}
